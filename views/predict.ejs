<%-include("partials/header.ejs")%>
  <div class="container-fluid px-1 py-5 mx-auto">
    <div class="row d-flex justify-content-center">
      <div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center">
        <h3>
    Get your health prediction
        </h3>
        <p class="blue-text">Fill the following form to get prediction about your condition</p>
        <div class="card p-3">

          <form class="form-card " method="POST" action="/predict-result">

            <div class="row justify-content-between text-left">
              <div class="form-group col-sm-6 flex-column d-flex">
                <label class="form-control-label px-3">First name<span class="text-danger"> *</span>
                </label>
                <input required type="text" id="fname" name="fname" placeholder="Enter your first name">
              </div>

              <div class="form-group col-sm-6 flex-column d-flex">
                <label class="form-control-label px-3">Last name<span class="text-danger"> *</span></label>
                <input required type="text" id="lname" name="lname" placeholder="Enter your last name">
              </div>

            </div>

            <div class="row justify-content-between text-left">

              <div class="form-group col-sm-6 flex-column d-flex">
                <label class="form-control-label px-3">Email<span class="text-danger"> *</span>
                </label>
                <input type="text" id="email" name="email" placeholder="Your Email">
              </div>

              <div class="form-group col-sm-6 flex-column d-flex">
                <label class="form-control-label px-3">Phone number<span class="text-danger"> *</span></label>
                <input type="text" id="mob" name="mobile" placeholder="Your Mobile Number">
              </div>

            </div>
            <div class="wrapper1 mt-3 mb-3">
              <div class="search-input">
                <a href="" target=" blank" hidden></a>
                <input type="text" class="" placeholder="Type your symptoms..">
                <div class="autocom-box">
                  <!-- here list are inserted from javascript -->
                </div>

                <div class="icon"><i class="fas fa-search"></i></div>
              </div>
              <!-- <div>
                      <input type="text" class="textF" name="" id="">
                  </div> -->
            </div>
            <div class="row justify-content-between text-left">
              <div class="form-group col-12 flex-column d-flex">
                <label class="form-control-label px-3">Symptoms<span class="text-danger"> *</span></label>
                <textarea type="text" class="textF" id="ans" name="request" placeholder="Selected symptoms"></textarea>
              </div>
            </div>
            <div class="row mt-2 justify-content-center">
              <div class="form-group col-sm-6 flex-column d-flex"> <button type="submit"
                  class="btn-block btn-primary">Submit</button> </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <div class="container text-center">
    <a href="/symptomList">List of Symptoms</a>
  </div>
  <script src="js/search.js"></script>

  <%-include("partials/footer.ejs")%>